# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Amazon Redshift Configuration
REDSHIFT_HOST=your-cluster.us-east-1.redshift.amazonaws.com
REDSHIFT_PORT=5439
REDSHIFT_DATABASE=automotive_data
REDSHIFT_SCHEMA=public
REDSHIFT_USER=admin
REDSHIFT_PASSWORD=YourSecurePassword123!

# Alternative: Use IAM authentication instead of password
# Set REDSHIFT_USE_IAM=true to enable IAM authentication
REDSHIFT_USE_IAM=false
REDSHIFT_CLUSTER_IDENTIFIER=automotive-cluster

# Amazon Bedrock Configuration
# Available models:
# - anthropic.claude-3-5-sonnet-20241022-v2:0 (Recommended - Most capable)
# - anthropic.claude-3-5-haiku-20241022-v1:0 (Fast and efficient)
# - anthropic.claude-3-opus-20240229-v1:0 (Most powerful)
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_TEMPERATURE=0.1
BEDROCK_MAX_TOKENS=2048
BEDROCK_TOP_P=0.95
BEDROCK_TOP_K=250

# AWS Authentication (for local development only)
# For ECS/Lambda: Remove these and use IAM roles instead
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_SESSION_TOKEN=your-session-token

# Application Configuration
MAX_CHAT_HISTORY=10
LOG_LEVEL=INFO

# CloudWatch Logging
CLOUDWATCH_LOG_GROUP=/aws/automotive-chatbot
CLOUDWATCH_LOG_STREAM=app

# SQL Agent Configuration
SQL_AGENT_MAX_ITERATIONS=15
SQL_AGENT_MAX_EXECUTION_TIME=100
SQL_TOP_K_RESULTS=10

# Optional: LangChain Tracing (for debugging)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your-langsmith-api-key
# LANGCHAIN_PROJECT=automotive-chatbot-aws

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
